 {{#if isUserLoggedIn }}
<div class="container">
  <p> Hello, {{ currentUserInfo.firstNeighm }}. </p>
  <div id="map"></div>
  <ul>
    <li>
      <a href="/profile"> My Profile </a>
    </li>
  </ul>

  {{#if errorMessage}}
  <p class="error-message">
    {{ errorMessage }}
  </p>
  {{/if}}

  <form class="mb-5" action="/add-post" method="post">
    <input name="text" type="text" placeholder="Write a new Post">
    <button>Post</button>
  </form>


  {{#each pposts}}
  <div class="card text-center mb-5">
    <div class="card-header">
      {{this._owner.firstNeighm}}
    </div>
    <div class="card-body">
      <p class="card-text">{{this.text}}</p>
    </div>
    <div class="card-footer text-muted">

      {{#each this._comments}}
      <div>{{this._owner.firstNeighm}}</div>
      <div>{{this._owner.lastNeighm}}</div>
      <div>{{this.text}}</div>
      {{/each}}

      <form action="/add-comment" method="post">
        <input name="text" type="text" placeholder="Comment">
        <input name="postId" type="text" value="{{this._id}}" hidden>
        <input name="postLocation" class="postLocation" id="postLocation " type="text" value="{{this._owner.location}}" hidden>
        <button>Send</button>
      </form>

    </div>
  </div>
  {{/each}}
</div>

{{else}}

<div class="header">
  <div class="container">


    <h1 class="h1-not-logged"> Hey Neigh!
      <br>Make friends around the corner. </h1>

    <div class="text-center">
      <a class="button-not-logged btn btn-dark btn-lg" href="/signup" role="button">Get Started</a>
    </div>


  </div>
</div>
{{/if}}


<script>
  let pposts = {{{ postsStringify }}}
  let users = {{{ usersStringify }}}
</script>


