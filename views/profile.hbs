<div class="header">
  <div class="container">

    <h1>Profile Page</h1>


    <ul>
      <li>{{user.firstNeighm}}</li>
      <li>{{user.lastNeighm}}</li>
      <li>{{user.email}}</li>
      <li>{{user.address}}</li>
    </ul>

    {{#if errorMessage}}
    <p class="error-message">
      {{ errorMessage }}
    </p>
    {{/if}}

    <p>Your Activity Posts</p>

    {{#each posts}}
    <div class="card text-center mb-5">

      <div class="card-header">

        <a href="/profile/{{this._owner._id}}">
          {{this._owner.firstNeighm}} {{this._owner.lastNeighm}}
        </a>
      </div>
      <div class="card-body">
        <p class="card-text">{{this.text}}</p>
      </div>
      <div class="card-footer text-muted">

        {{#each this._comments}}
        <div>
          <a href="/profile/{{this._owner._id}}">
            {{this._owner.firstNeighm}} {{this._owner.lastNeighm}}
          </a>
        </div>
        <div>{{this.text}}</div>
        {{/each}}

      </div>
    </div>
    {{/each}}
    <a href="/edit">Edit Profile</a>


  </div>